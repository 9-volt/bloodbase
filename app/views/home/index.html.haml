:css
  .span4.br {
    margin-bottom: 20px;
  }

%section.carousel
  .image= image_tag 'carousel.png'
  .info
    %h1
      Bine ai venit pe donezsange.eu -
      %br>/
      locul unde salvăm vieți împreună.
    %h2 Aici poti afla usor cum devii donator, te poti programa rapid pentru o donare si cel mai important poti cere ajutor.
    .buttons
      %a.btn.btn-danger{:href => "#", :href => "#{questionnaire_path}?redirect=#{new_donation_path}"} Doneaza
      %a.btn.btn-danger{:href => "#", :href => help_path} Caut donatori

%section.profiles
  .row
    .span12
      %h3 Persoane ce au nevoie de sange
  .row
    - @blood_requests.each do |br|
      .span4.br
        .image
          = link_to br.link do
            = attachment_image_tag br
        .purpose
          .text Mai e nevoie de #{br.persons_required - br.donations.count} din #{br.persons_required}
          .progress
            .bar.bar-danger{:style => "width: #{br.percent_complete}%;"}
        .description= br.summary
        .calltoaction
          %a.btn.btn-danger{:href => "#{questionnaire_path}?redirect=#{new_blood_request_case_donation_path(br)}"} Donează Sânge


  .row
    .span12.text-right= link_to 'Vezi toate cererile', cases_path

%section.infoblock
  .row
    .span12
      %hr/
  .row
    .span4
      .image
        = image_tag "blog.png"
      %h2 Blog
    .span4
      .image
        = image_tag "contacteaza-ne.png"
      %h2 Contacteaza-ne
    .span4
      .image
        = image_tag "despre-proiect.png"
      %h2 Despre proiect

:css
  .controls.date select {
    width: 80px;
  }

= form_for @donation, :html => {:class => 'form-horizontal'} do |f|
  %fieldset
    %legend Doneaza sange
    .control-group
      %label.control-label Numele, Prenumele, Patrimonicul
      .controls
        = f.text_field :full_name, :class => 'input-xlarge'

    .control-group
      %label.control-label Sex
      .controls
        = f.select :gender, [['Masculin', 'm'], ['Femenin', 'f']]

    .control-group
      %label.control-label Data naşterii
      .controls.date
        = f.date_select :birthdate, :order => [:day, :month, :year],
                        :default => 18.years.ago, :start_year => 65.years.ago.year

    .control-group
      %label.control-label Sânge
      .controls.date
        = f.select :blood_group, ['O(I)', 'A(II)', 'B(III)', 'AB(IV)']
        = f.select :blood_rh, ['Rh+', 'Rh-']

    .control-group
      %label.control-label Nr. de telefon
      .controls.date= f.text_field :phone

    .control-group
      %label.control-label Email
      .controls.date= f.email_field :email

    .control-group
      %label.control-label Buletin
      .controls.date= f.text_field :id_number

    .control-group
      %label.control-label Data înscrierii
      .controls.date
        = f.datetime_select :donate_at, :default => 1.day.from_now,
                            :order => [:day, :month, :year, :hour, :minute]

  .form-actions
    = f.submit 'Eu vin să donez!', :class => 'btn btn-primary'

